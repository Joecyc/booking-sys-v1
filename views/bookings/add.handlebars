<section class="search-banner text-white" id="search-banner">
  <div class="container py-0 my-0">
    {{! layout adjust}}
    <div class="row row-cols-1 row-cols-md-2">
      <div class="col mb-4">

        <div class="card" style="background-color: #374764;">
          <img src="" alt="" class="card-img-top img-fluid" />
          <div class="vard card-body">
            {{! <p class="font-weight-light text-white" >Venue</p> }}
            <h1
              class="display-5 py-0 font-weight-block text-center text-light"
            >The Country Club</h1>
            {{! <p class="font-weight-block text-center text-light">The Country Club</p> }}

            <form action="/bookings/add" method="post">
              <div class="form-row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      class="form-control"
                      id="bookingDate"
                      type="date"
                      name="bookingDate"
                      placeholder="Choose a Date"
                      class="textbox-n"
                      onfocus="(this.type = 'date')"
                      value="{{bookingDate}}"
                      style="width: 100%"
                    />
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <select class="form-control" id="course" name="course">
                      <option selected>Select Course</option>
                      <option value="PYTH01">Python Beginners</option>
                      <option value="REAC01">REACT Advance</option>
                      <option value="MGDB01">Mongo DB</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="col-md-0">
              </div>

              <div class="row">

                <div class="col-md-8">
                  <button
                    type="submit"
                    class="btn btn-outline-light pl-5 pr-5"
                    style="background-color: #8b817a;"
                    name="action"
                    value="checkSessions"
                  >Search&raquo;</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- #testing -->
      {{#if sessions}}

        <div class="col mb-4">
          <button
            type="submit"
            class="btn btn-sm btn-dark"
            style="background-color: #8b817a;"
            name="action"
            value="addBooking"
          >Add Booking</button>

          <button
            type="submit"
            class="btn btn-sm btn-dark"
            style="background-color: #8b817a;"
            name="action"
            value="confirmBooking"
          >Confirm Booking</button>
        </div>

        <div class="col mb-4">
          <input
            class="form-control"
            id="course_selected"
            type="text"
            name="course_selected"
            class="textbox"
            value="{{course_selected}}"
            style="width: 100%"
            placeholder="text..."
          />
        </div>

        <table class="table table-sm table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              {{!    <th scope="col">Facility</th>  }}
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Golf</th>
              <th scope="col">B</th>
              <th scope="col">Rugby</th>
              <th scope="col">B</th>
            </tr>
          </thead>
          <tbody>

            {{#each sessions}}

              <tr>
                <th scope="row">{{session_a}}</th>
                {{!--    <td>{{fac_name}}</td>    --}}
                <td>{{bookingDate}}</td>
                <td>{{session_desc}}</td>
                <td>{{status_a}}</td>
                <td>
                  <input
                    type="checkbox"
                    class="form-check-input"
                    id="checkbox"
                    name="session_selected_a"
                    value="{{session_a}}"
